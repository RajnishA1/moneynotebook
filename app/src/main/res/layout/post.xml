<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    android:layout_marginTop="1dp"
    android:background="@drawable/backgroundrelativecard"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <TextView
            android:id="@+id/dataname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:capitalize="words"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:text="@string/name"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            tools:ignore="Deprecated,RtlSymmetry,TextViewEdits" />

        <TextView
            android:id="@+id/datarupees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataname"
            android:layout_gravity="center_horizontal|end"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:text="@string/amount"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/Delete"
            android:onClick="onClickk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|end"
            android:background="?selectableItemBackground"
            android:text="@string/paid"
            android:textColor="@color/teal_200"

            android:textSize="24sp"
            app:cornerRadius="10dp" />
    </RelativeLayout>
</LinearLayout>